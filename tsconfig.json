{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [],
    "baseUrl": ".",
    "paths": {"src/*": ["./src/*"]},
    "sourceRoot": "src",
    "outDir": "out/",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "include": ["./src"],
  "exclude": ["out/**/*"]
}
