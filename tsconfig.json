{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [],
    "sourceRoot": "src",
    "outDir": "out/",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "exclude": ["out/**/*"]
}
